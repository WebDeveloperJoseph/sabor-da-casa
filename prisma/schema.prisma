generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id        Int      @id @default(autoincrement())
  nome      String   @unique @db.VarChar(100)
  descricao String?
  ativo     Boolean  @default(true)
  ordem     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  pratos    Prato[]

  @@map("categorias")
}

model Prato {
  id           Int                @id @default(autoincrement())
  nome         String             @db.VarChar(200)
  descricao    String?
  preco        Decimal            @db.Decimal(10, 2)
  imagem       String?            @db.VarChar(500)
  ativo        Boolean            @default(true)
  destaque     Boolean            @default(false)
  categoriaId  Int                @map("categoria_id")
  createdAt    DateTime           @default(now()) @map("created_at")
  updatedAt    DateTime           @updatedAt @map("updated_at")
  nomeBorda    String?            @map("nome_borda") @db.VarChar(100)
  precoBorda   Decimal?           @map("preco_borda") @db.Decimal(10, 2)
  itensPedido  ItemPedido[]
  ingredientes PratoIngrediente[]
  tamanhos     PratoTamanho[]
  categoria    Categoria          @relation(fields: [categoriaId], references: [id], onDelete: Cascade)

  @@map("pratos")
}

model PratoTamanho {
  id        Int      @id @default(autoincrement())
  pratoId   Int      @map("prato_id")
  tamanho   String   @db.VarChar(10)
  preco     Decimal  @db.Decimal(10, 2)
  ativo     Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  prato     Prato    @relation(fields: [pratoId], references: [id], onDelete: Cascade)

  @@unique([pratoId, tamanho])
  @@map("prato_tamanhos")
}

model Ingrediente {
  id         Int                @id @default(autoincrement())
  nome       String             @unique @db.VarChar(100)
  alergenico Boolean            @default(false)
  createdAt  DateTime           @default(now()) @map("created_at")
  updatedAt  DateTime           @updatedAt @map("updated_at")
  pratos     PratoIngrediente[]

  @@map("ingredientes")
}

model PratoIngrediente {
  pratoId       Int         @map("prato_id")
  ingredienteId Int         @map("ingrediente_id")
  ingrediente   Ingrediente @relation(fields: [ingredienteId], references: [id], onDelete: Cascade)
  prato         Prato       @relation(fields: [pratoId], references: [id], onDelete: Cascade)

  @@id([pratoId, ingredienteId])
  @@map("prato_ingredientes")
}

model Cliente {
  id                Int       @id @default(autoincrement())
  nome              String    @db.VarChar(200)
  telefone          String    @unique @db.VarChar(20)
  email             String?   @db.VarChar(200)
  dataNascimento    DateTime? @map("data_nascimento") @db.Date
  cpf               String?   @db.VarChar(100)
  endereco          String?
  complemento       String?   @db.VarChar(200)
  bairro            String?   @db.VarChar(100)
  cidade            String?   @db.VarChar(100)
  uf                String?   @db.VarChar(2)
  cep               String?   @db.VarChar(10)
  aceitaWhatsApp    Boolean   @default(true) @map("aceita_whatsapp")
  aceitaEmail       Boolean   @default(false) @map("aceita_email")
  aceitaPromocoes   Boolean   @default(true) @map("aceita_promocoes")
  consentimentoData DateTime  @default(now()) @map("consentimento_data")
  ativo             Boolean   @default(true)
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")
  pedidos           Pedido[]

  @@index([telefone])
  @@index([dataNascimento])
  @@index([email])
  @@map("clientes")
}

model Pedido {
  id          Int          @id @default(autoincrement())
  nomeCliente String       @map("nome_cliente") @db.VarChar(200)
  telefone    String?      @db.VarChar(20)
  endereco    String?
  observacoes String?
  status      String       @default("pendente") @db.VarChar(50)
  valorTotal  Decimal      @map("valor_total") @db.Decimal(10, 2)
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")
  clienteId   Int?         @map("cliente_id")
  dailyNumber Int?
  avaliacao   Avaliacao?
  itens       ItemPedido[]
  cliente     Cliente?     @relation(fields: [clienteId], references: [id])

  @@index([clienteId])
  @@map("pedidos")
}

model ItemPedido {
  id          Int     @id @default(autoincrement())
  pedidoId    Int     @map("pedido_id")
  pratoId     Int     @map("prato_id")
  nomePrato   String  @map("nome_prato") @db.VarChar(200)
  quantidade  Int     @default(1)
  precoUnit   Decimal @map("preco_unit") @db.Decimal(10, 2)
  subtotal    Decimal @db.Decimal(10, 2)
  observacoes String?
  tamanho     String? @db.VarChar(10)
  pedido      Pedido  @relation(fields: [pedidoId], references: [id], onDelete: Cascade)
  prato       Prato   @relation(fields: [pratoId], references: [id])

  @@map("itens_pedido")
}

model Configuracao {
  id                      Int      @id @default(autoincrement())
  nomePizzaria            String   @map("nome_pizzaria") @db.VarChar(200)
  telefone                String?  @db.VarChar(30)
  endereco                String?
  cnpj                    String?  @db.VarChar(20)
  email                   String?  @db.VarChar(200)
  taxaEntrega             Decimal  @default(0) @map("taxa_entrega") @db.Decimal(10, 2)
  pedidoMinimo            Decimal  @default(0) @map("pedido_minimo") @db.Decimal(10, 2)
  tempoPreparoMinutos     Int      @default(30) @map("tempo_preparo_minutos")
  raioEntregaKm           Int      @default(5) @map("raio_entrega_km")
  aceitarPedidos          Boolean  @default(true) @map("aceitar_pedidos")
  mensagemBoasVindas      String?  @map("mensagem_boas_vindas") @db.VarChar(300)
  createdAt               DateTime @default(now()) @map("created_at")
  updatedAt               DateTime @updatedAt @map("updated_at")
  fidelidadeAtivo         Boolean  @default(false) @map("fidelidade_ativo")
  fidelidadeCategoriaNome String?  @map("fidelidade_categoria_nome") @db.VarChar(100)
  fidelidadeDescricao     String?  @map("fidelidade_descricao") @db.VarChar(300)
  fidelidadeExpiraDias    Int?     @map("fidelidade_expira_dias")
  fidelidadeMeta          Int      @default(10) @map("fidelidade_meta")
  fidelidadePorPedido     Boolean  @default(true) @map("fidelidade_por_pedido")

  @@map("configuracoes")
}

model Avaliacao {
  id         Int      @id @default(autoincrement())
  pedidoId   Int      @unique @map("pedido_id")
  estrelas   Int
  comentario String?
  createdAt  DateTime @default(now()) @map("created_at")
  pedido     Pedido   @relation(fields: [pedidoId], references: [id], onDelete: Cascade)

  @@index([estrelas])
  @@map("avaliacoes")
}

model DailyOrderCounter {
  date String @id
  last Int

  @@map("daily_order_counters")
}
